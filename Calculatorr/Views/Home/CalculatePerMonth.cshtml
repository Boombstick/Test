@model Calculatorr.Models.DataModel


<div class="container">
    <form method="post">
        <div>

            <div class="mb-3">
                <label asp-for="LoanAmount">Сумма займа</label>
                <input class="form-control"asp-for="LoanAmount" type="number" placeholder="0" size="10" />
                <span asp-validation-for="LoanAmount" />
            </div>
            <div class="mb-3">
                <label asp-for="LoanTerm">Срок займа(в месяцах)</label>
                <input class="form-control" asp-for="LoanTerm" type="number" placeholder="0" />
                <span asp-validation-for="LoanTerm" />
            </div>

            <div class="mb-3">
                <label asp-for="LoanRate">Ставка(в год)</label>
                <input class="form-control" asp-for="LoanRate" type="number" placeholder="0" />
                <span asp-validation-for="LoanRate" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">"Рассчитать"</button>
            </div>
        </div>

    </form>
</div>



<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
